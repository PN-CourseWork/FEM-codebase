# FEM course matplotlib style

# LaTeX
text.usetex: True
font.family: serif
font.size: 11

# Axes
axes.labelsize: 12
axes.titlesize: 12
axes.grid: True
axes.axisbelow: True

# Legend
legend.fontsize: 10
legend.framealpha: 0.9

# Grid
grid.alpha: 0.5
grid.linestyle: --

# Figure
figure.figsize: 8, 5
figure.dpi: 100

# Lines
lines.linewidth: 1.5
lines.markersize: 6

# Savefig
savefig.dpi: 150
savefig.bbox: tight
